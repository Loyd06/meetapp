{% extends 'base.html.twig' %}

{% block title %}Fiche categorie{% endblock %}

{% block body %}
    <h1 class="text-center my-5">Fiche categorie</h1>
    <div class="row">
        <div class="card mb-3">
            <h4 class="card-header">{{categorie.libelle}}</h4>
            <div class="row">
                <div class="col-2">
                    <img class="avatar mx-auto my-3" style="height: 200px;   display: block;" alt="image de la catégorie" src="{{categorie.image}}">
                </div>
                <div class="col">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">{{categorie.description}}</li> 
                    </ul>
                </div>
            </div> 
        </div>
        <div>
            <a href="{{path('app_categories')}}" class="btn btn-primary" role="button">Retour à la liste</a>
        </div>
    </div>    
{% endblock %}
