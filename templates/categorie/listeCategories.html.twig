{% extends 'base.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}
<h1 class="text-center my-5">Liste des catégories</h1>
<div class="row">
    {% for categorie in categories %}
    <div class="col-sm-12 col-md-12 col-lg-4 col-xl-4">
        <div class="card mb-3">
            <h4 class="card-header">{{categorie.libelle}}</h4>
            
            <img class="avatar mx-auto my-3" style="height: 200px;   display: block;" alt="avatar du contact" src="{{asset(categorie.image)}}">
            
            <ul class="list-group list-group-flush">
                <li class="list-group-item">{{categorie.description}}</li>
            </ul>

            <div class="card-body d-grid gap-2">
                <a href="{{path('app_categorie', {'id':categorie.id})}}" class="btn btn-primary" role="button">Détails</a>
            </div>
            
        </div>
    </div>
    {% endfor %}
</div>    

{% endblock %}

