{% extends 'base.html.twig' %}

{% block title %}{{parent()}} - Liste des membres{% endblock %}

{% block body %}
    <h1 class="text-center tp-2">Tous nos membres</h1>
    <div class="row">
        {% for membre in membres %}
        <div class="col-sm-12 col-md-12 col-lg-4 col-xl-3">
            <div class="card mb-3">
                <h4 class="card-header">{{membre.nom}} {{membre.prenom}}</h4>
                
                <img class="avatar mx-auto my-3" style="height: 200px;   display: block;" alt="avatar du contact" src="{{membre.avatar}}">
                
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        {% if membre.sexe==0 %}
                            <span class="badge text-bg-info">H</span>
                        {% else %}
                            <span class="badge text-bg-warning">F</span>
                        {% endif %}
                    </li>
                    <li class="list-group-item">{{membre.rue}}</li>
                    <li class="list-group-item">{{membre.cp}}</li>
                    <li class="list-group-item">{{membre.ville}}</li>
                    <li class="list-group-item">{{membre.mail}}</li>
                    
                </ul>

                <div class="card-body d-grid gap-2">
                    <a href="#" class="btn btn-primary" role="button">DÃ©tails</a>
                </div>
                
            </div>
        </div>
        {% endfor %}
    </div>    
{% endblock %}
